@import nib

html
    width: 320px
    height: 450px

.main-page
    margin-top: 55px
    padding-left: 10px
    padding-right: 10px

.navbar
    width: 320px

    .container
        margin-left: 10px

        .dropdown-menu
            min-width: 120px

.footer
    text-align: center
    margin: 15px 0

.macros
    .macro
        margin-bottom: 10px

        .percentage-bar
            border-radius 4px
            border: 1px solid #AAA
            width: 300px
            height: 30px
            background-color: #DDD

            .percentage-complete
                border-radius 4px
                width: 0
                max-width: 100%
                height: 30px

                &.starches
                    background-color: #963
                &.legumes
                    background-color: #330
                &.veggies
                    background-color: #2E873B
                &.fruits
                    background-color: #C69
                &.proteins
                    background-color: #633
                &.fats
                    background-color: #C66
                &.shake
                    background-color: #39F

                .percentage-text
                    left: 5px
                    line-height: 30px
                    color: #FFF
                    display: inline
                    width: 200px

                    &.exceeding
                        color: #C00

.stats
    .stat
        margin-bottom: 10px

        .name
            font-style: italic
